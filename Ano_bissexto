# função que trata se o ano é válido

def validade_ano(ano):
    if ano < 1582:
        print(f' O ano bissexto só existe desde a introdução do calendário gregoriano (em 1582)')
    else: calcula_ano(ano)

# função que calcula ano bisesto

def calcula_ano(ano):

# se o número do ano não é divisível por quatro, é um ano comum;

    if ano % 4 != 0:
        print (f'O ano {ano} não é bissexto')
    else:

# caso contrário, se o número do ano não for divisível por 100, será um ano bissexto;

        if ano % 100 != 0:
            print(f'O ano {ano} é bissexto')
        else:

# caso contrário, se o número do ano não for divisível por 400, é um ano comum ;

            if ano % 400 != 0:
                print(f'O ano {ano} não é bissexto')
            else:

# caso contrário, é um ano bissexto .

                print(f'O ano {ano} é bissexto')

# recebe ano

while True:
    entrada = input('Digite o ano')
    if entrada == "":
        exit()
# tratamento de exceções
    try:
        ano = int(entrada)
    except ValueError:
        print(f'entre com um valor válido')
        continue


    validade_ano(ano)
